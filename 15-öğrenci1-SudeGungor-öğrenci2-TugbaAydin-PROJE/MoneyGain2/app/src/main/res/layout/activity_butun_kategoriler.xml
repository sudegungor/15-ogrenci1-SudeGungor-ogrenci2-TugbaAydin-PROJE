<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.ButunKategoriler">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_marginLeft="-40dp"
                android:layout_centerVertical="true"
                android:padding="15dp"/>



        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategoriler"
            android:textSize="36sp"
            android:fontFamily="@font/lora_italic"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:padding="10dp"/>



        <RelativeLayout
            android:id="@+id/butun_kategoriler_sut_kahvaltı"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/yuvarlak_sut_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Süt, Kahvaltılık"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="@font/baloo2_bold"
                android:padding="25dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tümünü Göster"
                android:background="#00000000"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/milk_siyah" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/butun_kategoriler_gida_sekerleme"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/yuvarlak_candy_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gıda, Şekerleme"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="@font/baloo2_bold"
                android:padding="25dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tümünü Göster"
                android:background="#00000000"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/candy_siyah" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/butun_kategoriler_icecek"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/yuvarlak_icecek_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İçecek"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="@font/baloo2_bold"
                android:padding="25dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tümünü Göster"
                android:background="#00000000"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/drink_siyah" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/butun_kategoriler_deterjan"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/yuvarlak_deterjan_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deterjan, Temizlik"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="@font/baloo2_bold"
                android:padding="25dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tümünü Göster"
                android:background="#00000000"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/cleaning_black" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/butun_kategoriler_bebek_oyuncak"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/yuvarlak_baby_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bebek, Oyuncak"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="@font/baloo2_bold"
                android:padding="25dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tümünü Göster"
                android:background="#00000000"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/baby_black" />


        </RelativeLayout>





    </LinearLayout>

</ScrollView>