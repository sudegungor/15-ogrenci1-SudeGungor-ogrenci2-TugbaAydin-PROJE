<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:layout_height="400dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:background="@drawable/ll_background">

        <ImageView
            android:id="@+id/rec_urunler_image1"
            android:layout_width="170dp"
            android:layout_marginTop="10dp"
            android:layout_height="200dp"
            android:src="@drawable/cola_2_5"
            android:scaleType="centerCrop"/>


        <TextView
            android:id="@+id/rec_urunler_title1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lora_italic"
            android:text="COCA COLA 2,5L"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>



    </LinearLayout>




    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="205dp"
        android:background="@drawable/ll_background">

        <ImageView
            android:id="@+id/rec_urunler_image2"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:src="@drawable/cola_2_5"
            android:scaleType="centerCrop"/>


        <TextView
            android:id="@+id/rec_urunler_title2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lora_italic"
            android:text="COCA COLA 2,5L"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>