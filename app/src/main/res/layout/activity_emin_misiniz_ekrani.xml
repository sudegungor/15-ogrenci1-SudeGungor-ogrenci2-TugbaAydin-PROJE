<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_background"
    tools:context=".User.EminMisinizEkrani">


    <ImageView
        android:id="@+id/market_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_kirpilmis_trans"
        app:layout_constraintBottom_toTopOf="@+id/txtbiz_kimiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.851" />

    <TextView
        android:id="@+id/txtbiz_kimiz"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/lora_semi_bold"
        android:text="Hesabınızı Silmek İstediğinizden Emin Misiniz? "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/evet_btn"
        app:layout_constraintTop_toBottomOf="@+id/txtbiz_kimiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.700"
        android:background="#FF029C09"
        android:text="EVET"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo2_bold"
        android:textSize="18dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hayir_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFE2F2F"
        android:text="HAYIR"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo2_bold"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtbiz_kimiz" />


</androidx.constraintlayout.widget.ConstraintLayout>